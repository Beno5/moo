<%= render 'shared/header', title: 'Our Projects' %>
<section class="wrapper !bg-[#ffffff]">
  <div class="container pt-20 xl:pt-18 lg:pt-18 md:pt-18 pb-16 xl:pb-20 lg:pb-20 md:pb-20">
    <div class="flex flex-wrap mx-[-15px]">
      <div class="lg:w-12/12 xl:w-12/12 xxl:w-12/12 w-full flex-[0_0_auto] px-[15px] max-w-full">
        <h2 class="text-[calc(1.305rem_+_0.66vw)] font-bold xl:text-[1.8rem] leading-[1.3] !mb-3">Our Initiatives</h2>
        <p class="lead !text-[1.05rem] !leading-[1.6] font-medium">At WISE, we are driven by the desire to create meaningful impact through a variety of projects and programs. We focus on equipping women with the tools and resources they need to succeed, whether they are launching businesses, expanding their skill sets, or seeking a supportive network.</p>
      </div>
    </div>
    <h2 class="text-center mt-8 text-[calc(1.305rem_+_0.66vw)] font-bold xl:text-[1.8rem] leading-[1.3] !mb-3">
      Ongoing and Upcoming Projects
      <%= image_tag("svg/doodle5.svg", class: "h-14 !absolute hidden xl:block lg:block", style: "bottom: -50%; right: 5%", alt: "doodle") %>
    </h2>
    <% if user_signed_in? %>
<%= link_to 'Create New Project', new_project_path, class: 'btn btn-mypurple !rounded-full !px-6 !py-2', data: { turbo: false } %>
    <% end %>
    <div class="flex flex-wrap gap-6 mt-10">
      <% @projects.each do |project| %>
        <div class="md:w-6/12 lg:w-4/12 xl:w-4/12 bg-white rounded-lg shadow-lg overflow-hidden">
          <figure class="card-img-top overlay overlay-1 hover-scale group">
            <%= link_to project_path(project), data: { turbo: false } do %>
              <%= image_tag project.image, alt: project.title, class: "!transition-all !duration-[0.35s] !ease-in-out group-hover:scale-105 w-full h-[200px] object-cover" %>
            <% end %>
            <figcaption class="group-hover:opacity-100 absolute w-full h-full opacity-0 text-center px-4 py-3 inset-0 z-[5] pointer-events-none p-2">
              <h5 class="from-top !mb-0 absolute w-full translate-y-[-80%] p-[.75rem_1rem] left-0 top-2/4">Read More</h5>
            </figcaption>
          </figure>
          <div class="p-6">
            <h2 class="text-lg font-bold text-[#343f52] hover:text-[#3f78e0] mb-2">
              <%= link_to project.title.html_safe, project_path(project), data: { turbo: false } %>
            </h2>
            <p class="text-sm text-[#aab0bc] mb-4">
              <%= truncate(project.content.html_safe, length: 100) %>
            </p>
            <p class="text-xs text-[#aab0bc]">
              <i class="uil uil-calendar-alt"></i>
              <%= project.date.strftime('%d %b %Y') %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
