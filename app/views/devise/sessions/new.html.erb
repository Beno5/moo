<%= render 'shared/header', title: 'Log in' %>
<section class="wrapper bg-light !bg-[#ffffff] ">
  <div class="container !pb-[4.5rem] xl:!pb-24 lg:!pb-24 md:!pb-24">
    <div class="flex flex-wrap">
      <div class="lg:w-7/12 xl:w-6/12 xxl:w-5/12 w-full flex-[0_0_auto] px-[15px] max-w-full !mx-auto ">
        <div class="card mt-12">
          <div class="card-body !p-12 !text-center">
            <h2 class="mb-3 text-left">Welcome Back</h2>
            <p class="lead text-[0.9rem] font-medium !leading-[1.65] !mb-6 text-left">Fill your email and password to sign in.</p>
            <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "text-left !mb-3") do |f| %>
              <div class="form-floating !relative mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control px-4 py-[0.6rem] h-[calc(2.5rem_+_2px)] min-h-[calc(2.5rem_+_2px)] leading-[1.25] block w-full text-[12px] font-medium text-[#60697b] bg-[#fefefe] bg-clip-padding border shadow-[0_0_1.25rem_rgba(30,34,40,0.04)] rounded-[0.4rem]" %>
                <%= f.label :email, "Email", class: "text-[#959ca9] text-[.75rem] absolute z-[2] left-0 top-0 px-4 py-[0.6rem]" %>
              </div>
              <div class="form-floating !relative password-field mb-4">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control px-4 py-[0.6rem] h-[calc(2.5rem_+_2px)] min-h-[calc(2.5rem_+_2px)] leading-[1.25] block w-full text-[12px] font-medium text-[#60697b] bg-[#fefefe] bg-clip-padding border shadow-[0_0_1.25rem_rgba(30,34,40,0.04)] rounded-[0.4rem]" %>
                <%= f.label :password, "Password", class: "text-[#959ca9] text-[.75rem] absolute z-[2] left-0 top-0 px-4 py-[0.6rem]" %>
              </div>
              <%= f.submit "Sign In", class: "btn btn-primary text-white !bg-[#3f78e0] border-[#3f78e0] w-full mb-2" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
